{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"],
      "numberOfRuns": 3
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "performance": ["warn", { "minScore": 0.9 }],
        "accessibility": ["warn", { "minScore": 0.95 }],
        "best-practices": ["warn", { "minScore": 0.9 }],
        "seo": ["warn", { "minScore": 0.9 }],
        "pwa": "off"
      }
    },
    "upload": {
      "target": "temporary-directory"
    }
  }
}
