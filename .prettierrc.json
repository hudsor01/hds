{
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"tabWidth": 2,
	"useTabs": false,
	"endOfLine": "auto",
	"bracketSpacing": true,
	"arrowParens": "always",
	"plugins": ["prettier-plugin-tailwindcss"],
	"tailwindConfig": "./tailwind.config.ts",
	"overrides": [
		{
			"files": ["*.json", ".prettierrc.json", ".eslintrc.json"],
			"options": {
				"parser": "json",
				"tabWidth": 2
			}
		},
		{
			"files": ["*.yaml", "*.yml"],
			"options": {
				"parser": "yaml",
				"tabWidth": 2
			}
		}
	]
}
