generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Define your models here based on your Supabase tables
model Property {
  id              String   @id @default(uuid())
  created_at      DateTime @default(now())
  name            String
  address         String
  city            String
  state           String
  zip_code        String
  type            String
  status          String
  owner_id        String
  organization_id String

  @@map("properties")
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  expires      DateTime
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("sessions")
}

